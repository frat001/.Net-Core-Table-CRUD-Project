<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tablolar</li>
    </ol>
</nav>
<h3>Tablolar</h3>

<div class="container">

    <a class="btn btn-success" href="/Tables/Insert">Yeni</a>
    <table id="myTable" class="table table-bordered table-hover mt-2">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Maas</th>
                <th style="width:10%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Adi</td>
                    <td>@item.Soyadi</td>
                    <td>@item.Maas</td>
                    <td>
                        <a class="btn btn-primary btn-sm" type="button" href="/Tables/Update/@item.Id">Düzenle</a>
                        <a class="btn btn-Danger btn-sm" type="button" href="/Tables/Delete/@item.Id">Sil</a>
                    </td>
                </tr>

            }


        </tbody>

    </table>

    <tr>
        <td colspan="2">Toplam Maaş</td>
        <td> </td>
        <td></td>
    </tr>

    <span id="Maas"></span>


    @if (@TempData["Message"] != null)
    {
        <span class="alert alert-success">@TempData["Message"]</span>
    }
</div>

