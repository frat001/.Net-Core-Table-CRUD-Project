<style>
    .toast {
        --bs-toast-bg: rgb(12 52 249) !important;
    }
</style>


<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a href="/Tables/Index">Tablolar</a></li>
        <li class="breadcrumb-item active" aria-current="page">Yeni</li>
    </ol>
</nav>

<h3>Insert</h3>

<form action="/Tables/Insert" method="post">
    <div class="container">

        <div class="mb-3 row">
            <label for="Adi" class="col-sm-2 col-form-label">Adı</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Adi" id="Adi">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="Soyadi" class="col-sm-2 col-form-label">Soyadı</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Soyadi" name="Soyadi">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="Maas" class="col-sm-2 col-form-label">Maaş</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="Maas" name="Maas">
            </div>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-left:93%;">Kayıt Et</button>
        @if (ViewBag.ErrorMessage != null)
        {
            <span class="alert alert-danger">@ViewBag.ErrorMessage</span>
        }
        @if (ViewBag.Message != null)
        {
            <span class="alert alert-success">@ViewBag.Message</span>
        }
    </div>
</form>

<button type="button" class="btn btn-danger" id="liveToastBtn">Show live toast</button>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
        <div class="toast-header">
            @* <img src="..." class="rounded me-2" alt="...">*@
            <strong class="me-auto">Uyarı</strong>
            @* <small>11 mins ago</small>*@
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="sivas">
        </div>
    </div>
</div>

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
        <div class="toast-header">
            @* <img src="..." class="rounded me-2" alt="...">*@
            <strong class="me-auto">Uyarı</strong>
            @* <small>11 mins ago</small>*@
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body" id="basarılı">
        </div>
    </div>
</div>




<script>
    let test = "@ViewBag.ErrorMessage";
    const toastTrigger = document.getElementById('liveToastBtn');
    const toastLiveExample = document.getElementById('liveToast');
    if (test != null) {
        $('#sivas').append(test);
        const toast = new bootstrap.Toast(toastLiveExample)
        toast.show()
    }
</script>

<script>
    let test = "@ViewBag.Message";
    const toastTrigger = document.getElementById('liveToastBtn');
    const toastLiveExample = document.getElementById('liveToast');
    if (test != null) {
        $('#basarılı').append(test);
        const toast = new bootstrap.Toast(toastLiveExample)
        toast.show()
    }
</script>